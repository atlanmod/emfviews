<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            allPopups="false"
            locationURI="popup:org.eclipse.jdt.ui.PackageExplorer">
         <command
               commandId="fr.inria.atlanmod.emfviews.ui.commands.createeview"
               label="%command.label"
               style="push"
               tooltip="%command.tooltip">
         </command>
      </menuContribution>
   </extension>
   <extension
         point="org.eclipse.ui.commandImages">
      <image
            commandId="fr.inria.atlanmod.emfviews.ui.commands.createeview"
            icon="icons/virtualLogo.png">
      </image>
   </extension>
   <extension
         point="org.eclipse.ui.commands">
      <command
            categoryId="fr.inria.atlanmod.emfviews.ui.categories.createeview"
            id="fr.inria.atlanmod.emfviews.ui.commands.createeview"
            name="%command.name">
      </command>
      <category
            description="%category.description"
            id="fr.inria.atlanmod.emfviews.ui.categories.createeview"
            name="%category.name">
      </category>
   </extension>
   <extension
         point="org.eclipse.ui.handlers">
      <handler
            class="fr.inria.atlanmod.emfviews.ui.commands.ViewWizardHandler"
            commandId="fr.inria.atlanmod.emfviews.ui.commands.createeview">
         <activeWhen>
            <iterate
                  ifEmpty="false">
               <adapt
                     type="org.eclipse.core.resources.IResource">
                  <test
                        property="org.eclipse.core.resources.name"
                        value="*.eviewpoint">
                  </test>
               </adapt>
            </iterate>
         </activeWhen>
      </handler>
   </extension>
   <extension
         point="org.eclipse.ui.newWizards">
      <wizard
            category="emfviewscategory"
            class="fr.inria.atlanmod.emfviews.ui.wizard.emfviewsproject.EmfViewsProjectCreator"
            icon="icons/VirtualModelWizard.png"
            id="emfViewsProjectWizard"
            name="EMF Views project">
      </wizard>
      <category
            id="emfviewscategory"
            name="EMF Views">
      </category>
      <wizard
            category="emfviewscategory"
            class="fr.inria.atlanmod.emfviews.ui.wizard.view.CreateViewpointWizard"
            icon="icons/VirtualModelWizard.png"
            id="virtualMetamodelFileWizard"
            name="EMF Viewpoint">
      </wizard>
   </extension>
   <extension
         point="org.eclipse.ui.editors">
      <editor
            class="fr.inria.atlanmod.emfviews.ui.editors.EViewEditor"
            default="true"
            extensions="eview"
            id="fr.inria.atlanmod.emfviews.ui.editors.eview"
            name="EView Editor">
      </editor>
   </extension>
   <extension
         point="org.eclipse.core.runtime.adapters">
      <factory
            adaptableType="org.eclipse.emf.ecore.EObject"
            class="fr.inria.atlanmod.emfviews.ui.editors.EObjectAdapterFactory">
         <adapter
               type="org.eclipse.ui.views.properties.IPropertySource">
         </adapter>
      </factory>
   </extension>

</plugin>
